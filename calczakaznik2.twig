<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kalkulace ubytování</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- DateRangePicker CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
  <!-- Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <style>
    body { background: #f5f5f5; font-family: 'Roboto', sans-serif; }
    .card { margin-bottom: 1rem; border-radius: .5rem; }
    .form-label i { vertical-align: middle; margin-right: .5rem; color: #6c757d; }
    .recap-table td:first-child { font-weight: 500; }
    #breakdown { display: none; }
    #openBreakdown { cursor: pointer; opacity: 0.6; vertical-align: middle; margin-left: 0.5rem; }
  </style>
</head>
<body>
  <div class="container py-4">
    <h1 class="mb-4">Kalkulace ubytování</h1>
    <div class="row gy-3">
      <!-- Vstupy -->
      <div class="col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="mb-3">
              <label class="form-label"><i class="material-icons">calendar_month</i>Termín</label>
              <input type="text" id="daterange" class="form-control" readonly>
            </div>
            <div class="mb-3">
              <label class="form-label"><i class="material-icons">apartment</i>Apartmán</label><br>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="apartment" id="aptA" value="A" checked>
                <label class="form-check-label" for="aptA">A</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="apartment" id="aptB" value="B">
                <label class="form-check-label" for="aptB">B</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="apartment" id="aptAB" value="AB">
                <label class="form-check-label" for="aptAB">Oba apartmány</label>
              </div>
              <div class="mt-2 text-muted">Kapacita: <span id="capacityDisplay">11+7</span></div>
            </div>
            <div class="row">
              <div class="col-6 mb-3">
                <label class="form-label">Osoby</label>
                <select id="peopleCount" class="form-select"></select>
              </div>
              <div class="col-6 mb-3">
                <label class="form-label">Mazlíčci</label>
                <select id="petsCount" class="form-select">
                  <option>0</option><option>1</option><option>2</option><option>3</option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Rekapitulace & cena -->
      <div class="col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <i class="material-icons">summarize</i> Rekapitulace
            </h5>
            <table class="table table-borderless recap-table">
              <tbody>
                <tr><td>Apartmán</td><td class="text-end" id="sumApartment">–</td></tr>
                <tr><td>Termín</td><td class="text-end" id="sumTerm">–</td></tr>
                <tr><td>Počet nocí</td><td class="text-end" id="sumNights">–</td></tr>
                <tr><td>Osoby</td><td class="text-end" id="sumPeople">–</td></tr>
                <tr><td>Mazlíčci</td><td class="text-end" id="sumPets">–</td></tr>
              </tbody>
            </table>
            <h4 class="mt-3">Cena pobytu</h4>
            <div id="totalPrice" class="fs-2 text-end">0 CZK</div>
          </div>
        </div>
      </div>
    </div>
    <div id="breakdown"></div>
  </div>

  <!-- JS knihovny -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/daterangepicker@3.1/daterangepicker.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    $(function() {
      $('#daterange').daterangepicker({
        locale: { format:'DD.MM.YYYY' },
        startDate: moment().add(1,'days'),
        endDate: moment().add(3,'days')
      });

      $('input[name="apartment"]').change(updatePeople);
      $('#peopleCount,#petsCount,#daterange,input[name="apartment"]').on('change input apply.daterangepicker', recalc);

      function updatePeople(){
        const apt = $('input[name="apartment"]:checked').val();
        const maxPeople = apt === 'A' ? 11 : apt === 'B' ? 6 : 17;
        const capacity = apt === 'A' ? '11+7' : apt === 'B' ? '6+2' : '17+9';
        $('#capacityDisplay').text(capacity);
        $('#peopleCount').empty();
        for(let i=1; i<=maxPeople; i++) $('#peopleCount').append(new Option(i,i));
        recalc();
      }

      function recalc() {
        const apt = $('input[name="apartment"]:checked').val();
        const term = $('#daterange').val();
        const nights = moment(term.split(' - ')[1],'DD.MM.YYYY').diff(moment(term.split(' - ')[0],'DD.MM.YYYY'),'days');
        const ppl = $('#peopleCount').val();
        const pets = $('#petsCount').val();
        const price = (ppl * nights * 550) + (pets * nights * 300);

        $('#sumApartment').text(apt);
        $('#sumTerm').text(term);
        $('#sumNights').text(nights);
        $('#sumPeople').text(ppl);
        $('#sumPets').text(pets);
        $('#totalPrice').text(price.toLocaleString() + ' CZK');
      }

      updatePeople();
    });
  </script>
</body>
</html>
